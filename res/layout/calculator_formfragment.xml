<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res/com.hoyoji.hoyoji_android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HyjCalculatorFormFragment" >
	<LinearLayout
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical">
		<TextView 
		    android:id="@+id/hyjCalculatorFormFragment_textField_amount"
		    android:layout_width="match_parent"
	        android:layout_height="60dp"/>
	        
	        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />
		   <!--  <ListView
	            android:id="@+id/hyjCalculatorFromFragment_listView_calculator"
	            android:layout_width="match_parent"
	            android:layout_height="200dp">
	        </ListView>
		   
	
		    <TextField
		        android:id="@+id/hyjCalculatorFromFragment_textField_amount"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="TextView" /> -->
	
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
	
		        <LinearLayout
		            android:id="@+id/tableRow1"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" 
		            android:weightSum="4">
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_clear"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="C" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_delete"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="DEL" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_divide"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="÷" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_multiply"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="×" />
	
		        </LinearLayout>
	
		        <LinearLayout
		            android:id="@+id/tableRow2"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:weightSum="4" >
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_7"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="7" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_8"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="8" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_9"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="9" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_subtract"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="－" />
	
		        </LinearLayout>
	
		        <LinearLayout
		            android:id="@+id/tableRow3"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:weightSum="4" >
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_4"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="4" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_5"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="5" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_6"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="6" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_plus"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="＋" />
	
		        </LinearLayout>
	
		        <LinearLayout
		            android:id="@+id/tableRow6"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:weightSum="4" >
			        <LinearLayout
			            android:id="@+id/tableRow5"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_weight="3"
			            android:orientation="vertical" >
				        <LinearLayout
				            android:id="@+id/tableRow4"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:weightSum="3" >
			
				            <Button
				                android:id="@+id/hyjCalculatorFromFragment_button_1"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_weight="1"
				                android:text="1" />
			
				            <Button
				                android:id="@+id/hyjCalculatorFromFragment_button_2"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_weight="1"
				                android:text="2" />
			
				            <Button
				                android:id="@+id/hyjCalculatorFromFragment_button_3"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_weight="1"
				                android:text="3" />
			
				        </LinearLayout>
				        <LinearLayout
				            android:id="@+id/tableRow5"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:weightSum="2" >
			
				            <Button
				                android:id="@+id/hyjCalculatorFromFragment_button_0"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_weight="1"
				                android:text="0" />
			
				            <Button
				                android:id="@+id/hyjCalculatorFromFragment_button_point"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_weight="1"
				                android:text="·" />
			
				            
			
				        </LinearLayout>
				    </LinearLayout>
				    <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_equal"
		                android:layout_width="wrap_content"
		                android:layout_height="fill_parent"
		                android:layout_weight="1"
		                android:text="=" />
				</LinearLayout>
			    
		    </LinearLayout>
	        
	       <Button
	           android:id="@id/button_save"
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="20dp"
	           android:text="@string/app_action_save" />
	
	</LinearLayout>
</ScrollView>