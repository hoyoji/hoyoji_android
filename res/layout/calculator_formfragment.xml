<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HyjCalculatorFormFragment" >
        <TextView
            android:id="@+id/hyjCalculatorFormFragment_hyjRemarkField_remark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/hyjCalculatorFormFragment_textField_amount"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideOverlay"
            android:textSize="20sp"
            android:paddingRight="5dp"
            android:gravity="right|bottom"/>
		<TextView 
		    android:id="@+id/hyjCalculatorFormFragment_textField_amount"
		    android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:background="@color/hoyoji_lightgray"
	        android:layout_above="@id/field_separator"
	        android:textSize="25sp"
	        android:scrollbars="horizontal"
	        android:singleLine="true"
	        android:paddingRight="5dp"
	        android:ellipsize="marquee"
	        android:gravity="right|center_vertical"/>
	        
        <View
           android:id="@id/field_separator"
           android:layout_width="match_parent"
           android:layout_height="1dip"
           android:layout_marginBottom="5dip"
           android:layout_marginTop="5dip"
            android:layout_above="@+id/buttonGroup"
           android:background="@drawable/line_divider" />
		   <!--  <ListView
	            android:id="@+id/hyjCalculatorFromFragment_listView_calculator"
	            android:layout_width="match_parent"
	            android:layout_height="200dp">
	        </ListView>
		   
	
		    <TextField
		        android:id="@+id/hyjCalculatorFromFragment_textField_amount"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="TextView" /> -->
	
		    <LinearLayout
		        android:id="@+id/buttonGroup"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        android:orientation="vertical" >
	
		        <LinearLayout
		            android:id="@+id/tableRow1"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" 
		            android:weightSum="4">
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_clear"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/button_circle_20"
		                android:layout_weight="1"
		                android:text="C" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_delete"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/button_circle_20"
		                android:layout_weight="1"
		                android:text="DEL" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_divide"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/button_circle_20"
		                android:layout_weight="1"
		                android:text="รท" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_multiply"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/button_circle_20"
		                android:layout_weight="1"
		                android:text="ร" />
	
		        </LinearLayout>
	
		        <LinearLayout
		            android:id="@+id/tableRow2"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:weightSum="4" >
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_7"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/button_circle_20"
		                android:layout_weight="1"
		                android:text="7" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_8"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/button_circle_20"
		                android:layout_weight="1"
		                android:text="8" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_9"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/button_circle_20"
		                android:layout_weight="1"
		                android:text="9" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_subtract"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/button_circle_20"
		                android:layout_weight="1"
		                android:text="-" />
	
		        </LinearLayout>
	
		        <LinearLayout
		            android:id="@+id/tableRow3"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:weightSum="4" >
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_4"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/button_circle_20"
		                android:layout_weight="1"
		                android:text="4" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_5"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/button_circle_20"
		                android:layout_weight="1"
		                android:text="5" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_6"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/button_circle_20"
		                android:layout_weight="1"
		                android:text="6" />
	
		            <Button
		                android:id="@+id/hyjCalculatorFromFragment_button_plus"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/button_circle_20"
		                android:layout_weight="1"
		                android:text="+" />
	
		        </LinearLayout>
	
		        <LinearLayout
		            android:id="@+id/tableRow6"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:weightSum="4" >
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_weight="3"
			            android:orientation="vertical" >
				        <LinearLayout
				            android:id="@+id/tableRow4"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:weightSum="3" >
			
				            <Button
				                android:id="@+id/hyjCalculatorFromFragment_button_1"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:background="@drawable/button_circle_20"
				                android:layout_weight="1"
				                android:text="1" />
			
				            <Button
				                android:id="@+id/hyjCalculatorFromFragment_button_2"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:background="@drawable/button_circle_20"
				                android:layout_weight="1"
				                android:text="2" />
			
				            <Button
				                android:id="@+id/hyjCalculatorFromFragment_button_3"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:background="@drawable/button_circle_20"
				                android:layout_weight="1"
				                android:text="3" />
			
				        </LinearLayout>
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:weightSum="3" >
				            <ImageButton
					           android:id="@id/button_save"
					           android:layout_width="0dp"
					           android:layout_height="match_parent"
					           android:src="@drawable/ic_action_accept_white"
					           android:background="@drawable/button_circle_solid_20"
					           android:layout_weight="1"
					           android:text="@string/app_action_save" />
			
				            <Button
				                android:id="@+id/hyjCalculatorFromFragment_button_0"
				                android:layout_width="0dp"
				                android:layout_height="wrap_content"
				                android:background="@drawable/button_circle_20"
				                android:layout_weight="1"
				                android:text="0" />
			
				            <Button
				                android:id="@+id/hyjCalculatorFromFragment_button_point"
				                android:layout_width="0dp"
				                android:layout_height="wrap_content"
				                android:background="@drawable/button_circle_20"
				                android:layout_weight="1"
				                android:text="." />
			
				            
			
				        </LinearLayout>
				    </LinearLayout>
				    <FrameLayout
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1">

					    <Button
					        android:id="@+id/hyjCalculatorFromFragment_button_equal"
					        android:layout_width="40dp"
					        android:layout_height="match_parent"
					        android:layout_gravity="center"
					        android:background="@drawable/button_rectangle_round_30"
					        android:text="=" />

				    </FrameLayout>
				</LinearLayout>
			    
		    </LinearLayout>
	        
	</RelativeLayout>