<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res/com.hoyoji.hoyoji_android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MoneyExpenseContainerFormFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.hoyoji.android.hyjframework.view.HyjImageField
            android:id="@+id/moneyExpenseContainerFormFragment_imageField_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/moneyExpenseContainerFormFragment_imageView_camera"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_new_picture" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:paddingLeft="66dp" >
				<RelativeLayout
				    android:layout_width="match_parent"
                	android:layout_height="wrap_content">

	                <com.hoyoji.android.hyjframework.view.HyjNumericField
	                    android:id="@+id/moneyExpenseContainerFormFragment_textField_amount"
	                    hyj:style="no_label"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_marginBottom="5dip"
	                    android:layout_toLeftOf="@+id/calculator"
	                    android:layout_toRightOf="@+id/calculator"
	                    hyj:editTextBold="true"
	                    hyj:editTextBorder="none"
	                    hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_amount"
	                    hyj:labelText="@string/moneyExpenseFormFragment_textView_amount" >
	
	                </com.hoyoji.android.hyjframework.view.HyjNumericField>
	                <ImageButton android:id="@+id/calculator"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentRight="true"
	                    android:layout_marginBottom="0dip"
	                    android:background="@drawable/calculator"/>
                </RelativeLayout>

                <View
                    android:id="@id/field_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:background="#E0E0E0" />

                <com.hoyoji.android.hyjframework.view.HyjDateTimeField
                    android:id="@+id/moneyExpenseContainerFormFragment_textField_date"
                    hyj:style="no_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_date"
                    hyj:labelText="@string/moneyExpenseFormFragment_textView_date" />
            </LinearLayout>
        </FrameLayout>

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />

        <com.hoyoji.android.hyjframework.view.HyjSelectorField
            android:id="@+id/moneyExpenseContainerFormFragment_textField_moneyExpenseCategory"
            hyj:style="top_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            hyj:editTextBorder="none"
            hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_moneyExpenseCategory"
            hyj:labelText="@string/moneyExpenseFormFragment_textView_moneyExpenseCategory" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjSelectorField
                    android:id="@+id/moneyExpenseContainerFormFragment_selectorField_moneyAccount"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_moneyAccount"
                    hyj:labelText="@string/moneyExpenseFormFragment_textView_moneyAccount" />

                <View
                    android:id="@+id/moneyExpenseContainerFormFragment_separatorField_moneyAccount"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="#E0E0E0" />

                <com.hoyoji.android.hyjframework.view.HyjSelectorField
                    android:id="@+id/moneyExpenseContainerFormFragment_selectorField_project"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_project"
                    hyj:labelText="@string/moneyExpenseFormFragment_textView_project" />
            </LinearLayout>

            <View
                android:id="@+id/moneyExpenseContainerFormFragment_separatorField_exchange"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="#E0E0E0" />

            <LinearLayout
                android:id="@+id/moneyExpenseContainerFormFragment_linearLayout_exchangeRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyExpenseContainerFormFragment_textField_exchangeRate"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_exchangeRate"
                    hyj:labelText="@string/moneyExpenseFormFragment_textView_exchangeRate" />

                <ImageView
                    android:id="@+id/moneyExpenseContainerFormFragment_imageButton_refresh_exchangeRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_refresh_rotate" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/moneyExpenseContainerFormFragment_apportionField_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/moneyApportionField_title" >
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/moneyExpenseContainerFormFragment_imageButton_apportion_add_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_action_add_group" />

                <ImageView
                    android:id="@+id/moneyExpenseContainerFormFragment_imageButton_apportion_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_action_add_person" />

                <ImageView
                    android:id="@+id/moneyExpenseContainerFormFragment_imageButton_apportion_more_actions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_action_overflow" />
            </LinearLayout>
        </FrameLayout>

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="2dip"
            android:background="#E0E0E0" />

        <com.hoyoji.hoyoji.money.MoneyApportionField
            android:id="@+id/moneyExpenseContainerFormFragment_apportionField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />

        <ImageButton
            android:id="@id/expand_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_expand" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />
        
        <LinearLayout 
            android:id="@+id/moneyExpenseContainerFormFragment_expandMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            
        <com.hoyoji.android.hyjframework.view.HyjRemarkField
            android:id="@+id/moneyExpenseContainerFormFragment_textField_remark"
            hyj:style="no_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            hyj:editTextBorder="none"
            hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_remark"
            hyj:labelText="@string/moneyExpenseFormFragment_textView_remark" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />

        <com.hoyoji.android.hyjframework.view.HyjSelectorField
            android:id="@+id/moneyExpenseContainerFormFragment_selectorField_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_friend"
            hyj:labelText="@string/moneyExpenseFormFragment_textView_friend" >
        </com.hoyoji.android.hyjframework.view.HyjSelectorField>

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />

        <com.hoyoji.android.hyjframework.view.HyjSelectorField
            android:id="@+id/projectFormFragment_selectorField_financialOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            hyj:hintText="@string/projectFormFragment_editText_hint_financialOwner"
            hyj:labelText="@string/projectFormFragment_textView_financialOwner" >
        </com.hoyoji.android.hyjframework.view.HyjSelectorField>
        
        <TextView
	        android:id="@+id/projectFormFragment_textView_hint_financialOwner"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/projectFormFragment_textView_hint_financialOwner"
	        android:textColor="#999999" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />
		
		</LinearLayout>

        <Button
            android:id="@id/button_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/app_action_save" />

        <Button
            android:id="@id/button_delete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/app_action_delete"
            android:textColor="#FF0000" />
    </LinearLayout>

</ScrollView>