<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res/com.hoyoji.hoyoji_android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MoneyTransferFormFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.hoyoji.android.hyjframework.view.HyjImageField
            android:id="@+id/moneyTransferFormFragment_imageField_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/moneyTransferFormFragment_imageView_camera"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:background="@color/hoyoji_yellow"
                android:src="@drawable/ic_action_new_picture_white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:paddingLeft="66dp" >
				<FrameLayout
				    android:layout_width="match_parent"
                	android:layout_height="wrap_content">

	                <com.hoyoji.android.hyjframework.view.HyjNumericField
	                    android:id="@+id/moneyTransferFormFragment_textField_transferOutAmount"
	                    hyj:style="no_label"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginRight="40dp"
	                    android:layout_gravity="center_vertical"
	                    hyj:editTextBold="true"
	                    hyj:editTextBorder="none"
	                    hyj:hintText="@string/moneyTransferFormFragment_editText_hint_transferOutAmount"
	                    hyj:labelText="@string/moneyTransferFormFragment_textView_transferOutAmount" >
	                    <requestFocus />
	                </com.hoyoji.android.hyjframework.view.HyjNumericField>
	                <ImageButton android:id="@+id/calculator"
	                    android:layout_width="25dp"
	                    android:layout_height="25dp"
	                    android:layout_gravity="right|center_vertical"
	                    android:background="@drawable/calculator"/>
                </FrameLayout>
                <View
                    android:id="@id/field_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/line_divider" />

                <com.hoyoji.android.hyjframework.view.HyjDateTimeField
                    android:id="@+id/moneyTransferFormFragment_textField_date"
                    hyj:style="no_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTransferFormFragment_editText_hint_date"
                    hyj:labelText="@string/moneyTransferFormFragment_textView_date" />
            </LinearLayout>
        </FrameLayout>
        
        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
        
        <com.hoyoji.android.hyjframework.view.HyjSelectorField
            android:id="@+id/moneyTransferFormFragment_selectorField_project"
            hyj:style="top_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            hyj:editTextBorder="none"
            hyj:hintText="@string/moneyTransferFormFragment_editText_hint_project"
            hyj:labelText="@string/moneyTransferFormFragment_textView_project" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <!-- <ImageView
                    android:id="@+id/moneyTransferFormFragment_imageView_clear_transferOutFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:src="@drawable/abc_ic_clear_search_api_holo_light" /> -->

                <com.hoyoji.android.hyjframework.view.HyjSelectorField
                    android:id="@+id/moneyTransferFormFragment_selectorField_transferOutFriend"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTransferFormFragment_editText_hint_transferOutFriend"
                    hyj:labelText="@string/moneyTransferFormFragment_textView_transferOutFriend" >
                </com.hoyoji.android.hyjframework.view.HyjSelectorField>
            </FrameLayout>

            <View
                android:id="@+id/moneyTransferFormFragment_separatorField_transferOut"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/line_divider" />

            <com.hoyoji.android.hyjframework.view.HyjSelectorField
                android:id="@+id/moneyTransferFormFragment_selectorField_transferOut"
                hyj:style="top_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                hyj:editTextBorder="none"
                hyj:hintText="@string/moneyTransferFormFragment_editText_hint_transferOut"
                hyj:labelText="@string/moneyTransferFormFragment_textView_transferOut" />
        </LinearLayout>

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

               <!--  <ImageView
                    android:id="@+id/moneyTransferFormFragment_imageView_clear_transferInFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:src="@drawable/abc_ic_clear_search_api_holo_light" /> -->

                <com.hoyoji.android.hyjframework.view.HyjSelectorField
                    android:id="@+id/moneyTransferFormFragment_selectorField_transferInFriend"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTransferFormFragment_editText_hint_transferInFriend"
                    hyj:labelText="@string/moneyTransferFormFragment_textView_transferInFriend" >
                </com.hoyoji.android.hyjframework.view.HyjSelectorField>
            </FrameLayout>

            <View
                android:id="@+id/moneyTransferFormFragment_separatorField_transferIn"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/line_divider" />

            <com.hoyoji.android.hyjframework.view.HyjSelectorField
                android:id="@+id/moneyTransferFormFragment_selectorField_transferIn"
                hyj:style="top_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                hyj:editTextBorder="none"
                hyj:hintText="@string/moneyTransferFormFragment_editText_hint_transferIn"
                hyj:labelText="@string/moneyTransferFormFragment_textView_transferIn" />
        </LinearLayout>

        <View
            android:id="@+id/field_separator_exchangeRate"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />

            <LinearLayout
                android:id="@+id/moneyTransferFormFragment_linearLayout_exchangeRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyTransferFormFragment_textField_transferInAmount"
                    hyj:style="top_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" 
                    hyj:editTextBold="true"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTransferFormFragment_editText_hint_transferInAmount"
                    hyj:labelText="@string/moneyTransferFormFragment_textView_transferInAmount" />
                <View
	                android:id="@+id/moneyTransferFormFragment_separatorField_exchange"
	                android:layout_width="1dip"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="5dip"
	                android:background="@drawable/line_divider" />

               <!--  <View
                    android:id="@+id/moneyTransferFormFragment_separatorField_transferInamount"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/line_divider" /> -->
                <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyTransferFormFragment_textField_exchangeRate"
                    hyj:style="top_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6" 
                    android:layout_gravity="center_horizontal"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTransferFormFragment_editText_hint_exchangeRate"
                    hyj:labelText="@string/moneyTransferFormFragment_textView_exchangeRate" />
                <ImageView
                    android:id="@+id/moneyTransferFormFragment_imageButton_refresh_exchangeRate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" 
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_refresh_rotate" />
        </LinearLayout>
        
       <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />

        <ImageButton
            android:id="@id/expand_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_expand" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
        
        <LinearLayout 
            android:id="@+id/moneyExpenseContainerFormFragment_expandMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
        
	        <!-- <View
	            android:id="@+id/field_separator_transferOutProject"
	            android:layout_width="match_parent"
	            android:layout_height="1dip"
	            android:layout_marginBottom="5dip"
	            android:layout_marginTop="5dip"
	            android:background="@drawable/line_divider" 
	            android:visibility="gone"/>
	 -->
	        <LinearLayout
	            android:id="@+id/moneyTransferFormFragment_LinerLayout_transferOutProject"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:visibility="gone">
	
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="2"
	                android:orientation="vertical" >
	
	                <com.hoyoji.android.hyjframework.view.HyjTextField
	                    android:id="@+id/moneyTransferFormFragment_textField_transferOutCurrency"
	                    hyj:style="top_label"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    hyj:editTextBold="true"
	                    hyj:editTextBorder="none"
	                    hyj:hintText="@string/moneyTransferFormFragment_editText_hint_transferOutCurrency"
	                    hyj:labelText="@string/moneyTransferFormFragment_textView_transferOutCurrency" />
	
	                <View
	                    android:id="@+id/moneyTransferFormFragment_separatorField_transferOutCurrency"
	                    android:layout_width="match_parent"
	                    android:layout_height="1dip"
	                    android:layout_marginBottom="5dip"
	                    android:layout_marginTop="5dip"
	                    android:background="@drawable/line_divider" />
	
	                <com.hoyoji.android.hyjframework.view.HyjTextField
	                    android:id="@+id/moneyTransferFormFragment_textField_transferProjectCurrency"
	                    hyj:style="top_label"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    hyj:editTextBold="true"
	                    hyj:editTextBorder="none"
	                    hyj:hintText="@string/moneyTransferFormFragment_editText_hint_transferProjectCurrency"
	                    hyj:labelText="@string/moneyTransferFormFragment_textView_transferProjectCurrency" />
	            </LinearLayout>
	
	            <View
	                android:layout_width="1dip"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="5dip"
	                android:background="@drawable/line_divider" />
	
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:layout_weight="1"
	                android:orientation="vertical" >
	
	                <com.hoyoji.android.hyjframework.view.HyjNumericField
	                    android:id="@+id/moneyTransferFormFragment_textField_transferOutProjectExchangeRate"
	                    hyj:style="top_label"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    hyj:editTextBorder="none"
	                    hyj:hintText="@string/moneyTransferFormFragment_editText_hint_transferOutProjectExchangeRate"
	                    hyj:labelText="@string/moneyTransferFormFragment_textView_transferOutProjectExchangeRate" />
	
	                <ImageView
	                    android:id="@+id/moneyTransferFormFragment_imageButton_refresh_transferOutProjectExchangeRate"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:src="@drawable/ic_action_refresh_rotate" />
	            </LinearLayout>
	        </LinearLayout>
	        
	        <View
	            android:id="@+id/field_separator_projectTransferIn"
	            android:layout_width="match_parent"
	            android:layout_height="1dip"
	            android:layout_marginBottom="5dip"
	            android:layout_marginTop="5dip"
	            android:background="@drawable/line_divider" 
	            android:visibility="gone"/>
	
	        <LinearLayout
	            android:id="@+id/moneyTransferFormFragment_LinerLayout_projectTransferIn"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:visibility="gone">
	
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="2"
	                android:orientation="vertical" >
	                
	                <com.hoyoji.android.hyjframework.view.HyjTextField
	                    android:id="@+id/moneyTransferFormFragment_textField_transferInCurrency"
	                    hyj:style="top_label"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    hyj:editTextBold="true"
	                    hyj:editTextBorder="none"
	                    hyj:hintText="@string/moneyTransferFormFragment_editText_hint_transferInCurrency"
	                    hyj:labelText="@string/moneyTransferFormFragment_textView_transferInCurrency" />
	
	                <View
	                    android:id="@+id/moneyTransferFormFragment_separatorField_transferInCurrency"
	                    android:layout_width="match_parent"
	                    android:layout_height="1dip"
	                    android:layout_marginBottom="5dip"
	                    android:layout_marginTop="5dip"
	                    android:background="@drawable/line_divider" />
	
	                <com.hoyoji.android.hyjframework.view.HyjTextField
	                    android:id="@+id/moneyTransferFormFragment_textField_projectTransferInCurrency"
	                    hyj:style="top_label"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    hyj:editTextBold="true"
	                    hyj:editTextBorder="none"
	                    hyj:hintText="@string/moneyTransferFormFragment_editText_hint_transferProjectCurrency"
	                    hyj:labelText="@string/moneyTransferFormFragment_textView_transferProjectCurrency" />
	
	            </LinearLayout>
	
	            <View
	                android:layout_width="1dip"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="5dip"
	                android:background="@drawable/line_divider" />
	
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:layout_weight="1"
	                android:orientation="vertical" >
	
	                <com.hoyoji.android.hyjframework.view.HyjNumericField
	                    android:id="@+id/moneyTransferFormFragment_textField_projectTransferInExchangeRate"
	                    hyj:style="top_label"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    hyj:editTextBorder="none"
	                    hyj:hintText="@string/moneyTransferFormFragment_editText_hint_projectTransferInExchangeRate"
	                    hyj:labelText="@string/moneyTransferFormFragment_textView_projectTransferInExchangeRate" />
	
	                <ImageView
	                    android:id="@+id/moneyTransferFormFragment_imageButton_refresh_projectTransferInExchangeRate"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:src="@drawable/ic_action_refresh_rotate" />
	            </LinearLayout>
	        </LinearLayout>
	        
	        <View
	            android:id="@id/field_separator"
	            android:layout_width="match_parent"
	            android:layout_height="1dip"
	            android:layout_marginBottom="5dip"
	            android:layout_marginTop="5dip"
	            android:background="@drawable/line_divider"/>
	
	        <com.hoyoji.android.hyjframework.view.HyjRemarkField
	            android:id="@+id/moneyTransferFormFragment_textField_remark"
	            hyj:style="top_label"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            hyj:editTextBorder="none"
	            hyj:hintText="@string/moneyTransferFormFragment_editText_hint_remark"
	            hyj:labelText="@string/moneyTransferFormFragment_textView_remark" />
	
	        <View
	            android:id="@id/field_separator"
	            android:layout_width="match_parent"
	            android:layout_height="1dip"
	            android:layout_marginBottom="5dip"
	            android:layout_marginTop="5dip"
	            android:background="@drawable/line_divider" />
        
        </LinearLayout>

        <Button
            android:id="@id/button_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rectangle"     
            android:text="@string/app_action_save" />
        
        <Button
            android:id="@id/button_delete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rectangle"     
            android:text="@string/app_action_delete"
            android:textColor="@color/hoyoji_red" />
    </LinearLayout>

</ScrollView>