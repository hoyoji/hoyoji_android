        android:id="@+id/projectEventFormFragment_textField_name"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        hyj:hintText="@string/projectEventFormFragment_editText_hint_name"
        hyj:labelText="@string/projectEventFormFragment_textView_name" >
    	<requestFocus />
     </com.hoyoji.android.hyjframework.view.HyjTextField>
     <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
        android:background="@drawable/line_divider" 
        />
     

     <com.hoyoji.android.hyjframework.view.HyjSelectorField
            android:id="@+id/projectEventFormFragment_hyjSelectorField_projectName"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            hyj:hintText="@string/projectEventFormFragment_hyjSelectorField_hint_projectName"
            hyj:labelText="@string/projectEventFormFragment_hyjSelectorField_projectName" />
     
     <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
        android:background="@drawable/line_divider" 
        />
     
     <com.hoyoji.android.hyjframework.view.HyjSelectorField
          android:id="@+id/projectFormFragment_selectorField_financialOwner"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          hyj:hintText="@string/projectFormFragment_editText_hint_financialOwner"
          hyj:labelText="@string/projectFormFragment_textView_financialOwner" >
