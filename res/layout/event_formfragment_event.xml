      <TextView
	    android:id="@+id/projectFormFragment_textView_hint_financialOwner"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/projectFormFragment_textView_hint_financialOwner"
	    android:gravity="center"
	        android:textSize="12sp"
	        android:padding="5dp"
		    android:singleLine="true"
		    android:ellipsize="end"
	        android:background="@color/hoyoji_lightgray"
	        android:textColor="@color/gray"/>
           
    <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
        android:background="@drawable/line_divider" 
        />
    
    <com.hoyoji.android.hyjframework.view.HyjRemarkField
        android:id="@+id/projectEventFormFragment_HyjRemarkField_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        hyj:style="top_label"
        hyj:minLines="3"
        hyj:hintText="@string/projectEventFormFragment_hyjRemarkField_hint_description"
        hyj:labelText="@string/projectEventFormFragment_hyjRemarkField_description" />

    <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
        android:background="@drawable/line_divider" 
        />
    
