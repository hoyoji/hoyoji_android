<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res/com.hoyoji.aaevent_android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EventFormFragment" >
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <com.hoyoji.android.hyjframework.view.HyjDateTimeField
        android:id="@+id/projectEventFormFragment_hyjDateTimeField_date"
        hyj:style="left_label"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:gravity="right"
        layout_gravity="center_horizonta" 
        android:layout_gravity="right"
        hyj:editTextBorder="none"
        hyj:hintText="@string/projectEventFormFragment_hyjDateTimeField_hint_date"
        hyj:labelText="@string/projectEventFormFragment_hyjDateTimeField_date" 
        android:visibility="gone"/>
    
    <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
        android:background="@drawable/line_divider" 
        android:visibility="gone"
        />
    
    <com.hoyoji.android.hyjframework.view.HyjDateTimeField
        android:id="@+id/projectEventFormFragment_hyjDateTimeField_startDate"
        hyj:style="left_label"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:gravity="right"
        layout_gravity="center_horizonta" 
        android:layout_gravity="right"
        hyj:editTextBorder="none"
        hyj:hintText="@string/projectEventFormFragment_hyjDateTimeField_hint_startDate"
        hyj:labelText="@string/projectEventFormFragment_hyjDateTimeField_startDate" />
    
    <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
        android:background="@drawable/line_divider" 
        />
     
     <com.hoyoji.android.hyjframework.view.HyjDateTimeField
        android:id="@+id/projectEventFormFragment_hyjDateTimeField_endDate"
        hyj:style="left_label"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:gravity="right"
        layout_gravity="center_horizonta" 
        android:layout_gravity="right"
        hyj:editTextBorder="none"
        hyj:hintText="@string/projectEventFormFragment_hyjDateTimeField_hint_endDate"
        hyj:labelText="@string/projectEventFormFragment_hyjDateTimeField_endDate" />
    
    <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
