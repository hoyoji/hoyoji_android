<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
 	xmlns:hyj="http://schemas.android.com/apk/res/com.hoyoji.hoyoji"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProjectFormFragment" >

    <com.hoyoji.android.hyjframework.view.HyjTextField 
            android:id="@+id/projectFormFragment_textField_projectName"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
            hyj:labelText="@string/projectFormFragment_textView_projectName"
            hyj:hintText="@string/projectFormFragment_editText_hint_projectName"
        />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/projectFormFragment_textView_parentProject"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/projectFormFragment_textView_parentProject" />

        <EditText
            android:id="@+id/projectFormFragment_editText_parentProject"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|right" 
            android:hint="@string/projectFormFragment_editText_hint_parentProject" 
            android:maxLines="1"
            android:singleLine="true"
            android:focusable="false">
        </EditText>
    </LinearLayout>

    
	<Button
	    android:id="@id/button_save"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/app_action_save"/>
	
</LinearLayout>
