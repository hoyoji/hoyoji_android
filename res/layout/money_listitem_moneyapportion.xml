<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:descendantFocusability="blocksDescendants" >

        <com.hoyoji.android.hyjframework.view.HyjImageView
            android:id="@+id/moneyApportionListItem_picture"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/ic_action_person" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="60dip"
            android:paddingBottom="20dip" >

            <TextView
                android:id="@+id/moneyApportionListItem_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/moneyApportionListItem_friendName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/moneyApportionListItem_apportionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

    <com.hoyoji.android.hyjframework.view.HyjNumericView
        android:id="@+id/moneyApportionListItem_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:ellipsize="marquee"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:singleLine="true" />

</FrameLayout>