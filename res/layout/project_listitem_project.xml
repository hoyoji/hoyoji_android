<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="5dp"
    android:paddingRight="0dp"
	android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/projectListItem_picture"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/abc_tab_indicator_ab_holo"
        android:clickable="true" />
    
    <TextView
        android:id="@+id/projectListItem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="66dip" />
    
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right|center_vertical"
	    android:gravity="right"
	    android:layout_marginRight="40dp"
	    android:orientation="vertical">
	    <TextView 
	        android:id="@+id/projectListItem_expenseTotalLabel"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:textSize="10sp"
		    android:textColor="@android:color/darker_gray"
		    android:text="支出"/>
	     <com.hoyoji.android.hyjframework.view.HyjNumericView 
	        android:id="@+id/projectListItem_expenseTotal"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
	    	android:textColor="@android:color/darker_gray"/>
	    
	    <TextView 
	        android:id="@+id/projectListItem_incomeTotalLabel"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:textSize="10sp"
		    android:textColor="@android:color/darker_gray"
		    android:text="收入"/>
	    <com.hoyoji.android.hyjframework.view.HyjNumericView 
	        android:id="@+id/projectListItem_incomeTotal"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
	    	android:textColor="@android:color/darker_gray"/>
	</LinearLayout>
	
    <ImageButton
        android:id="@+id/projectListItem_action_viewSubProjects"
        android:layout_width="40dp"
        android:layout_height="76dp"
        android:layout_gravity="right|center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:background="@drawable/abc_tab_indicator_ab_holo"
        android:src="@drawable/ic_action_next_item" />
</FrameLayout>