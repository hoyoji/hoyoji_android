<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/projectListItem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>
    
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:gravity="right"
	    android:layout_marginRight="50dp"
	    android:orientation="vertical">
	    
	     <com.hoyoji.android.hyjframework.view.HyjNumericView 
	        android:id="@+id/projectListItem_expenseTotal"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
	    	android:textColor="@android:color/darker_gray"
	    	android:text="¥0.00"/>
	    
	    <com.hoyoji.android.hyjframework.view.HyjNumericView 
	        android:id="@+id/projectListItem_incomeTotal"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
	    	android:textColor="@android:color/darker_gray"
	    	android:text="¥0.00"/>
	</LinearLayout>
	
    <ImageButton
        android:id="@+id/projectListItem_action_viewSubProjects"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
          android:background="@drawable/abc_tab_indicator_ab_holo"
        android:src="@drawable/abc_ic_go_search_api_holo_light" />
</FrameLayout>