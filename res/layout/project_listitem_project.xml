<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:descendantFocusability="blocksDescendants">

    <com.hoyoji.android.hyjframework.view.HyjImageView
        android:id="@+id/projectListItem_picture"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_action_share"
          android:background="@drawable/abc_tab_indicator_ab_holo"
        android:clickable="true" />
    
    <TextView
        android:id="@+id/projectListItem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="46dip" />
    
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:gravity="right"
	    android:layout_marginRight="40dp"
	    android:orientation="vertical">
	    
	     <com.hoyoji.android.hyjframework.view.HyjNumericView 
	        android:id="@+id/projectListItem_expenseTotal"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
	    	android:textColor="@android:color/darker_gray"
	    	android:text="¥0.00"/>
	    
	    <com.hoyoji.android.hyjframework.view.HyjNumericView 
	        android:id="@+id/projectListItem_incomeTotal"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
	    	android:textColor="@android:color/darker_gray"
	    	android:text="¥0.00"/>
	</LinearLayout>
	
    <ImageButton
        android:id="@+id/projectListItem_action_viewSubProjects"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:paddingLeft="10dp"
          android:background="@drawable/abc_tab_indicator_ab_holo"
        android:src="@drawable/ic_action_next_item" />
</FrameLayout>