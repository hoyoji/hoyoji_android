<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res/com.hoyoji.hoyoji"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MoneyAccountFormFragment" >
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <com.hoyoji.android.hyjframework.view.HyjTextField
        android:id="@+id/moneyAccountFormFragment_textField_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        hyj:hintText="@string/moneyAccountFormFragment_editText_hint_name"
        hyj:labelText="@string/moneyAccountFormFragment_textView_name" />

        <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
        android:background="@android:color/darker_gray" 
        />
    
    <com.hoyoji.android.hyjframework.view.HyjSelectorField
        android:id="@+id/moneyAccountFormFragment_selectorField_currency"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        hyj:hintText="@string/moneyAccountFormFragment_editText_hint_currency"
        hyj:labelText="@string/moneyAccountFormFragment_textView_currency" />
    
        <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
        android:background="@android:color/darker_gray" 
        />
    
    <com.hoyoji.android.hyjframework.view.HyjNumericField
        android:id="@+id/moneyAccountFormFragment_textField_currentBalance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        hyj:hintText="@string/moneyAccountFormFragment_editText_hint_currentBalance"
        hyj:labelText="@string/moneyAccountFormFragment_textView_currentBalance" />

        <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
        android:background="@android:color/darker_gray" 
        />
    
    <com.hoyoji.android.hyjframework.view.HyjTextField
        android:id="@+id/moneyAccountFormFragment_textField_accountType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        hyj:hintText="@string/moneyAccountFormFragment_editText_hint_accountType"
        hyj:labelText="@string/moneyAccountFormFragment_textView_accountType" />
    
        <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
        android:background="@android:color/darker_gray" 
        />
    
    <com.hoyoji.android.hyjframework.view.HyjRemarkField
        android:id="@+id/moneyAccountFormFragment_textField_accountNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        hyj:hintText="@string/moneyAccountFormFragment_editText_hint_accountNumber"
        hyj:labelText="@string/moneyAccountFormFragment_textView_accountNumber" />

        <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
        android:background="@android:color/darker_gray" 
        />
    
    <com.hoyoji.android.hyjframework.view.HyjRemarkField
        android:id="@+id/moneyAccountFormFragment_textField_bankAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        hyj:hintText="@string/moneyAccountFormFragment_editText_hint_bankAddress"
        hyj:labelText="@string/moneyAccountFormFragment_textView_bankAddress" />
    
        <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
        android:background="@android:color/darker_gray" 
        />
    
    <com.hoyoji.android.hyjframework.view.HyjRemarkField
        android:id="@+id/moneyAccountFormFragment_textField_remark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        hyj:hintText="@string/moneyAccountFormFragment_editText_hint_remark"
        hyj:labelText="@string/moneyAccountFormFragment_textView_remark" />

        <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginBottom="5dip"
        android:background="@android:color/darker_gray" 
        />
    
	<Button
	    android:id="@id/button_save"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/app_action_save"/>
	
</LinearLayout>

</ScrollView>
