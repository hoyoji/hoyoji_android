<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
 	xmlns:hyj="http://schemas.android.com/apk/res/com.hoyoji.hoyoji_android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserFormFragment" >
    
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp" >
            
        <com.hoyoji.android.hyjframework.view.HyjImageView 
            	android:id="@+id/userFormFragment_imageView_picture"
	         android:layout_width="56dp"
	         android:layout_height="56dp"
		     android:background="@drawable/ic_action_person"
	         android:layout_gravity="center_vertical"/>
                 
        <TextView
            android:id="@+id/userFormFragment_textField_userName1"
       		android:layout_gravity="center_vertical"
       		android:paddingLeft="80dp"
       		android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
        
    <com.hoyoji.android.hyjframework.view.HyjTextField 
            android:id="@+id/userFormFragment_textField_userNickName"
		    android:layout_width="fill_parent"
		    android:layout_height="43dp" 
            hyj:labelText="@string/friendFormFragment_textView_userNickName"
            hyj:hintText="@string/friendFormFragment_editText_hint_userNickName"
        />	
        
	 <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="10dip"
    	android:layout_marginBottom="10dip"
        android:background="#E0E0E0" 
        />
	 
	    <com.hoyoji.android.hyjframework.view.HyjRemarkField
            android:id="@+id/userFormFragment_textField_remark"
            hyj:style="top_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:padding="5dip"
            hyj:hintText="@string/userFormFragment_textView_hint_addFriend_request"/>
	 
	<Button
	    android:id="@+id/button_save"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
    	android:layout_marginTop="15dip"
	    android:text="@string/userFormFragment_button_addFriend"/>
	
</LinearLayout>
