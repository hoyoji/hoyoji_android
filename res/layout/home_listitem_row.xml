<?xml version="1.0" encoding="utf-8"?>
 <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:paddingTop="10dip"
     android:paddingBottom="10dip"
     android:paddingRight="5dp"
     android:paddingLeft="5dp"
     android:background="#f5f5f5"
     android:descendantFocusability="blocksDescendants">
     
     <com.hoyoji.android.hyjframework.view.HyjImageView android:id="@+id/homeListItem_picture"
         android:layout_width="56dp"
         android:layout_height="56dp"
         android:layout_gravity="center_vertical"/>
     
	 <LinearLayout 
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content" 
	     android:paddingLeft="66dip"
	     android:orientation="vertical" >
		<TextView android:id="@+id/homeListItem_subTitle"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
	    	android:layout_gravity="left" 
	    	android:textSize="12sp"
	    	android:textColor="@android:color/darker_gray"/>
		
		<TextView android:id="@+id/homeListItem_title"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
		    android:textStyle="bold"
	    	android:layout_gravity="left" />	
	    	
		<TextView android:id="@+id/homeListItem_remark"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
	    	android:layout_gravity="left" 
	    	android:textSize="12sp"
	    	android:textColor="@android:color/darker_gray"/>	
	</LinearLayout>
	
	<LinearLayout 
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_gravity="right" 
	     android:orientation="vertical" >
		<com.hoyoji.android.hyjframework.view.HyjDateTimeView android:id="@+id/homeListItem_date"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
	    	android:textSize="12sp"
	    	android:textColor="@android:color/darker_gray"
	    	android:layout_gravity="right" />
		
		<com.hoyoji.android.hyjframework.view.HyjNumericView android:id="@+id/homeListItem_amount"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
		    android:textStyle="bold"
	    	android:textColor="#FF0000"
	    	android:layout_gravity="right" />	
	    	
		<TextView android:id="@+id/homeListItem_owner"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
	    	android:layout_gravity="right" 
	    	android:textSize="12sp"
	    	android:textColor="@android:color/darker_gray" />	
	</LinearLayout>

	
 </FrameLayout>