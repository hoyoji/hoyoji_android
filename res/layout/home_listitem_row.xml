<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/activated_background_indicator"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="10dip"
    android:paddingTop="10dip" >

    <com.hoyoji.android.hyjframework.view.HyjImageView
        android:id="@+id/homeListItem_picture"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>

 <!-- ======================================   right side =================================================== -->
        
        <com.hoyoji.android.hyjframework.view.HyjDateTimeView
            android:id="@+id/homeListItem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <com.hoyoji.android.hyjframework.view.HyjNumericView
            android:id="@+id/homeListItem_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/homeListItem_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />
    
        <!-- ======================================   left side =================================================== -->
        
        <TextView
            android:id="@+id/homeListItem_subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_toRightOf="@id/homeListItem_picture"
			android:layout_alignParentTop="true"
			android:layout_toLeftOf="@id/homeListItem_date"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/homeListItem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_toRightOf="@id/homeListItem_picture"
        	android:layout_centerVertical="true"
			android:layout_toLeftOf="@id/homeListItem_amount"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/homeListItem_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_toRightOf="@id/homeListItem_picture"
			android:layout_alignParentBottom="true"
			android:layout_toLeftOf="@id/homeListItem_owner"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />
        
        
       
</RelativeLayout>