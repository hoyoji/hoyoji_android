<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res/com.hoyoji.hoyoji_android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MoneyBorrowFormFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.hoyoji.android.hyjframework.view.HyjImageField
            android:id="@+id/moneyBorrowFormFragment_imageField_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="5dip"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/moneyBorrowFormFragment_imageView_camera"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_new_picture" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:paddingLeft="66dp" >



                <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyBorrowFormFragment_textField_amount"
                    hyj:style="no_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBold="true"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyBorrowFormFragment_editText_hint_amount"
                    hyj:labelText="@string/moneyBorrowFormFragment_textView_amount" >

                    <requestFocus />
                </com.hoyoji.android.hyjframework.view.HyjNumericField>
                <View
                    android:id="@id/field_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="#E0E0E0" />
                <com.hoyoji.android.hyjframework.view.HyjDateTimeField
                    android:id="@+id/moneyBorrowFormFragment_textField_date"
                    hyj:style="no_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyBorrowFormFragment_editText_hint_date"
                    hyj:labelText="@string/moneyBorrowFormFragment_textView_date" />
            </LinearLayout>
        </FrameLayout>

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />

        <!-- <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" > -->
             
           <!-- <View
                android:id="@id/field_separator"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="#E0E0E0" />

             <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/moneyBorrowFormFragment_imageView_clear_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:src="@drawable/abc_ic_clear_search_api_holo_light" /> -->

                <com.hoyoji.android.hyjframework.view.HyjSelectorField
                    android:layout_weight="1"
                    android:id="@+id/moneyBorrowFormFragment_selectorField_friend"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyBorrowFormFragment_editText_hint_friend"
                    hyj:labelText="@string/moneyBorrowFormFragment_textView_friend" >
                </com.hoyoji.android.hyjframework.view.HyjSelectorField>
            <!-- </FrameLayout> -->
        <!-- </LinearLayout> -->
        
        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />
        
        
        <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyBorrowFormFragment_textField_returnedAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:style="top_label"
                    hyj:editTextBold="true"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyBorrowFormFragment_editText_hint_returnedAmount"
                    hyj:labelText="@string/moneyBorrowFormFragment_textView_returnedAmount" />

        <View
            android:id="@+id/moneyBorrowFormFragment_separatorField_returnedAmount"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjSelectorField
                    android:id="@+id/moneyBorrowFormFragment_selectorField_moneyAccount"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyBorrowFormFragment_editText_hint_moneyAccount"
                    hyj:labelText="@string/moneyBorrowFormFragment_textView_moneyAccount" />

                <View
                    android:id="@+id/moneyBorrowFormFragment_separatorField_moneyAccount"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="#E0E0E0" />

                <com.hoyoji.android.hyjframework.view.HyjSelectorField
                    android:id="@+id/moneyBorrowFormFragment_selectorField_project"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyBorrowFormFragment_editText_hint_project"
                    hyj:labelText="@string/moneyBorrowFormFragment_textView_project" />
            </LinearLayout>

            <View
                android:id="@+id/moneyBorrowFormFragment_separatorField_exchange"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="#E0E0E0" />

            <LinearLayout
                android:id="@+id/moneyBorrowFormFragment_linearLayout_exchangeRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyBorrowFormFragment_textField_exchangeRate"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyBorrowFormFragment_editText_hint_exchangeRate"
                    hyj:labelText="@string/moneyBorrowFormFragment_textView_exchangeRate" />

                <ImageView
                    android:id="@+id/moneyBorrowFormFragment_imageButton_refresh_exchangeRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_refresh_rotate" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />
        
        <ImageButton
            android:id="@id/expand_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_expand" />
        
        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />
        
        <LinearLayout 
            android:id="@+id/moneyBorrowFormFragment_expandMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

	        <com.hoyoji.android.hyjframework.view.HyjRemarkField
	            android:id="@+id/moneyBorrowFormFragment_textField_remark"
	            hyj:style="no_label"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            hyj:editTextBorder="none"
	            hyj:hintText="@string/moneyBorrowFormFragment_editText_hint_remark"
	            hyj:labelText="@string/moneyBorrowFormFragment_textView_remark" />
	        
	        <View
	            android:id="@id/field_separator"
	            android:layout_width="match_parent"
	            android:layout_height="1dip"
	            android:layout_marginBottom="5dip"
	            android:layout_marginTop="5dip"
	            android:background="#E0E0E0" />
	        
	        <com.hoyoji.android.hyjframework.view.HyjDateTimeField
	            android:id="@+id/moneyBorrowFormFragment_textField_returnDate"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            hyj:editTextBorder="none"
	            hyj:hintText="@string/moneyBorrowFormFragment_editText_hint_returnDate"
	            hyj:labelText="@string/moneyBorrowFormFragment_textView_returnDate" />
	
	        <View
	            android:id="@id/field_separator"
	            android:layout_width="match_parent"
	            android:layout_height="1dip"
	            android:layout_marginBottom="5dip"
	            android:layout_marginTop="5dip"
	            android:background="#E0E0E0" />
	
	           <!-- <com.hoyoji.android.hyjframework.view.HyjSelectorField
	               android:id="@+id/projectFormFragment_selectorField_financialOwner"
	               android:layout_width="match_parent"
	               android:layout_height="wrap_content"
	               hyj:hintText="@string/projectFormFragment_editText_hint_financialOwner"
	               hyj:labelText="@string/projectFormFragment_textView_financialOwner" >
	           </com.hoyoji.android.hyjframework.view.HyjSelectorField>
	           
	        <View
	            android:id="@id/field_separator"
	            android:layout_width="match_parent"
	            android:layout_height="1dip"
	            android:layout_marginBottom="5dip"
	            android:layout_marginTop="5dip"
	            android:background="#E0E0E0" /> -->
        </LinearLayout>
        
        <Button
            android:id="@id/button_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/app_action_save" />
        
        <Button
            android:id="@id/button_delete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/app_action_delete"
            android:textColor="#FF0000" />
    </LinearLayout>

</ScrollView>