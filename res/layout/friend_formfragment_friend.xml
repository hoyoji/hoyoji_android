<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
 	xmlns:hyj="http://schemas.android.com/apk/res/com.hoyoji.hoyoji"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FriendFormFragment" >
    
	<com.hoyoji.android.hyjframework.view.HyjSelectorField 
            android:id="@+id/friendFormFragment_selectorField_friend_category"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
            hyj:labelText="@string/friendFormFragment_textView_friend_category"
            hyj:hintText="@string/friendFormFragment_editText_hint_friend_category"
        />
          
    <com.hoyoji.android.hyjframework.view.HyjTextField 
            android:id="@+id/friendFormFragment_textField_nickName"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
            hyj:labelText="@string/friendFormFragment_textView_nickName"
            hyj:hintText="@string/friendFormFragment_editText_hint_nickName"
        />
       
    <com.hoyoji.android.hyjframework.view.HyjDateTimeField 
            android:id="@+id/friendFormFragment_textField_datetime"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
            hyj:labelText="日期"
            hyj:hintText="请输入日期"
        />
    <com.hoyoji.android.hyjframework.view.HyjNumericField 
            android:id="@+id/friendFormFragment_textField_money"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
            hyj:labelText="金额"
            hyj:hintText="请输入金额"
        />
    
	<Button
	    android:id="@id/button_save"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/app_action_save"/>
	
</LinearLayout>
