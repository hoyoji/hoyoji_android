<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="48dp"
     android:padding="5dip"
     android:descendantFocusability="blocksDescendants"
     android:background="@color/hoyoji_lightgray"
	 android:gravity="center_vertical">

		<com.hoyoji.android.hyjframework.view.HyjDateTimeView android:id="@+id/homeListItem_group_date"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
		    android:layout_weight="2" />
		
		
		<com.hoyoji.android.hyjframework.view.HyjNumericView android:id="@+id/homeListItem_group_expenseTotal"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
	    	android:textSize="12sp"
	    	android:textColor="@android:color/darker_gray"
	    	android:gravity="right" />	
	    	
		<com.hoyoji.android.hyjframework.view.HyjNumericView android:id="@+id/homeListItem_group_incomeTotal"  
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
	    	android:textSize="12sp"
	    	android:textColor="@android:color/darker_gray"
	    	android:gravity="right" />	
		
 </LinearLayout>