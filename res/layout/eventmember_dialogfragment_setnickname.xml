<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res/com.hoyoji.aaevent_android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EventMemberSetNickNameDialogFragment" >

       <LinearLayout
        android:id="@+id/eventMemberSetNickNameDialogFragment_linearLayout_NickName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/eventMemberSetNickNameDialogFragment_textView_nickName"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/projectEventMemberFormFragment_hyjTextField_nickName" />

        <EditText
            android:id="@+id/eventMemberSetNickNameDialogFragment_editText_nickName"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|right" 
	    	android:ellipsize="start"
            android:hint="@string/projectEventMemberFormFragment_hyjTextField_hint_nickName" 
                android:maxLines="1"
                android:singleLine="true">
        </EditText>

    </LinearLayout>

</LinearLayout>