<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res/com.hoyoji.hoyoji"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MoneyTransactionSummaryFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="5dp"
            android:background="#f5f5f5"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="收支汇总"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/moneyTransactionSummaryFragment_inoutTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="..."
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="5dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="总收入" />

            <TextView
                android:id="@+id/moneyTransactionSummaryFragment_incomeTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="..." />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="5dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="总支出" />

            <TextView
                android:id="@+id/moneyTransactionSummaryFragment_expenseTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="..." />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="5dp"
            android:background="#f5f5f5"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#f5f5f5"
                android:text="转账汇总"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/moneyTransactionSummaryFragment_transferTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="..."
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="5dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="总转入" />

            <TextView
                android:id="@+id/moneyTransactionSummaryFragment_transferInTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="..." />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="5dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="总转出" />

            <TextView
                android:id="@+id/moneyTransactionSummaryFragment_transferOutTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="..." />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="5dp"
            android:background="#f5f5f5"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="负债汇总"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/moneyTransactionSummaryFragment_debtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="..."
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="5dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="总借入" />

            <TextView
                android:id="@+id/moneyTransactionSummaryFragment_borrowTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="..." />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="5dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="总还款" />

            <TextView
                android:id="@+id/moneyTransactionSummaryFragment_returnTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="..." />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="5dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="总借出" />

            <TextView
                android:id="@+id/moneyTransactionSummaryFragment_lendTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="..." />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:padding="5dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="总收款" />

            <TextView
                android:id="@+id/moneyTransactionSummaryFragment_paybackTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="..." />
        </FrameLayout>
    </LinearLayout>

</ScrollView>