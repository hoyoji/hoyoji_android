<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res/com.hoyoji.hoyoji_android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MoneyTopupFormFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.hoyoji.android.hyjframework.view.HyjImageField
            android:id="@+id/moneyTopupFormFragment_imageField_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/moneyTopupFormFragment_imageView_camera"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_new_picture" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:paddingLeft="66dp" >
				<FrameLayout
				    android:layout_width="match_parent"
                	android:layout_height="wrap_content">

	                <com.hoyoji.android.hyjframework.view.HyjNumericField
	                    android:id="@+id/moneyTopupFormFragment_textField_transferOutAmount"
	                    hyj:style="no_label"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginRight="40dp"
	                    android:layout_gravity="center_vertical"
	                    hyj:editTextBold="true"
	                    hyj:editTextBorder="none"
	                    hyj:hintText="@string/moneyTopupFormFragment_editText_hint_transferOutAmount"
	                    hyj:labelText="@string/moneyTopupFormFragment_textView_transferOutAmount" >
	                    <requestFocus />
	                </com.hoyoji.android.hyjframework.view.HyjNumericField>
	                <ImageButton android:id="@+id/calculator"
	                    android:layout_width="40dp"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="right|center_vertical"
	                    android:src="@drawable/calculator"
	                    android:background="@android:color/transparent"/>
                </FrameLayout>
                
                <View
                    android:id="@id/field_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="#E0E0E0" />
                <com.hoyoji.android.hyjframework.view.HyjDateTimeField
                    android:id="@+id/moneyTopupFormFragment_textField_date"
                    hyj:style="no_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTopupFormFragment_editText_hint_date"
                    hyj:labelText="@string/moneyTopupFormFragment_textView_date" />
                
            </LinearLayout>
        </FrameLayout>

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />

            <com.hoyoji.android.hyjframework.view.HyjSelectorField
                android:id="@+id/moneyTopupFormFragment_selectorField_transferOut"
                hyj:style="top_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                hyj:editTextBorder="none"
                hyj:hintText="@string/moneyTopupFormFragment_editText_hint_transferOut"
                hyj:labelText="@string/moneyTopupFormFragment_textView_transferOut" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

             <com.hoyoji.android.hyjframework.view.HyjSelectorField
                 android:id="@+id/moneyTopupFormFragment_selectorField_transferInFriend"
                 hyj:style="top_label"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
              android:layout_weight="1"
                 hyj:editTextBorder="none"
                 hyj:hintText="@string/moneyTopupFormFragment_editText_hint_transferInFriend"
                 hyj:labelText="@string/moneyTopupFormFragment_textView_transferInFriend" >
             </com.hoyoji.android.hyjframework.view.HyjSelectorField>
 
            <View
                android:id="@+id/moneyTopupFormFragment_separatorField_transferIn"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="#E0E0E0" />

            <com.hoyoji.android.hyjframework.view.HyjSelectorField
                android:id="@+id/moneyTopupFormFragment_selectorField_transferIn"
                hyj:style="top_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                hyj:editTextBorder="none"
                hyj:hintText="@string/moneyTopupFormFragment_editText_hint_transferIn"
                hyj:labelText="@string/moneyTopupFormFragment_textView_transferIn" />
        </LinearLayout>

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyTopupFormFragment_textField_transferInAmount"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBold="true"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTopupFormFragment_editText_hint_transferInAmount"
                    hyj:labelText="@string/moneyTopupFormFragment_textView_transferInAmount" />

                <View
                    android:id="@+id/moneyTopupFormFragment_separatorField_transferInamount"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="#E0E0E0" />

                <com.hoyoji.android.hyjframework.view.HyjSelectorField
                    android:id="@+id/moneyTopupFormFragment_selectorField_project"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTopupFormFragment_editText_hint_project"
                    hyj:labelText="@string/moneyTopupFormFragment_textView_project" />
            </LinearLayout>

            <View
                android:id="@+id/moneyTopupFormFragment_separatorField_exchange"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="#E0E0E0" />

            <LinearLayout
                android:id="@+id/moneyTopupFormFragment_linearLayout_exchangeRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyTopupFormFragment_textField_exchangeRate"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTopupFormFragment_editText_hint_exchangeRate"
                    hyj:labelText="@string/moneyTopupFormFragment_textView_exchangeRate" />

                <ImageView
                    android:id="@+id/moneyTopupFormFragment_imageButton_refresh_exchangeRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_refresh_rotate" />
            </LinearLayout>
        </LinearLayout>
        
        <View
            android:id="@+id/field_separator_transferOutProject"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" 
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/moneyTopupFormFragment_LinerLayout_transferOutProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjTextField
                    android:id="@+id/moneyTopupFormFragment_textField_transferOutCurrency"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBold="true"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTopupFormFragment_editText_hint_transferOutCurrency"
                    hyj:labelText="@string/moneyTopupFormFragment_textView_transferOutCurrency" />

                <View
                    android:id="@+id/moneyTopupFormFragment_separatorField_transferOutCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="#E0E0E0" />

                <com.hoyoji.android.hyjframework.view.HyjTextField
                    android:id="@+id/moneyTopupFormFragment_textField_transferProjectCurrency"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBold="true"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTopupFormFragment_editText_hint_transferProjectCurrency"
                    hyj:labelText="@string/moneyTopupFormFragment_textView_transferProjectCurrency" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="#E0E0E0" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyTopupFormFragment_textField_transferOutProjectExchangeRate"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTopupFormFragment_editText_hint_transferOutProjectExchangeRate"
                    hyj:labelText="@string/moneyTopupFormFragment_textView_transferOutProjectExchangeRate" />

                <ImageView
                    android:id="@+id/moneyTopupFormFragment_imageButton_refresh_transferOutProjectExchangeRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_refresh_rotate" />
            </LinearLayout>
        </LinearLayout>
        
        <View
            android:id="@+id/field_separator_projectTransferIn"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" 
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/moneyTopupFormFragment_LinerLayout_projectTransferIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjTextField
                    android:id="@+id/moneyTopupFormFragment_textField_projectTransferInCurrency"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBold="true"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTopupFormFragment_editText_hint_transferProjectCurrency"
                    hyj:labelText="@string/moneyTopupFormFragment_textView_transferProjectCurrency" />

                <View
                    android:id="@+id/moneyTopupFormFragment_separatorField_transferInCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="#E0E0E0" />
                
                <com.hoyoji.android.hyjframework.view.HyjTextField
                    android:id="@+id/moneyTopupFormFragment_textField_transferInCurrency"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBold="true"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTopupFormFragment_editText_hint_transferInCurrency"
                    hyj:labelText="@string/moneyTopupFormFragment_textView_transferInCurrency" />

            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="#E0E0E0" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyTopupFormFragment_textField_projectTransferInExchangeRate"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyTopupFormFragment_editText_hint_projectTransferInExchangeRate"
                    hyj:labelText="@string/moneyTopupFormFragment_textView_projectTransferInExchangeRate" />

                <ImageView
                    android:id="@+id/moneyTopupFormFragment_imageButton_refresh_projectTransferInExchangeRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_refresh_rotate" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />

        <com.hoyoji.android.hyjframework.view.HyjRemarkField
            android:id="@+id/moneyTopupFormFragment_textField_remark"
            hyj:style="no_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            hyj:editTextBorder="none"
            hyj:hintText="@string/moneyTopupFormFragment_editText_hint_remark"
            hyj:labelText="@string/moneyTopupFormFragment_textView_remark" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#E0E0E0" />

        <Button
            android:id="@id/button_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rectangle_round_5"     
            android:text="@string/app_action_save" />
        
        <Button
            android:id="@id/button_delete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rectangle_round_5"     
            android:text="@string/app_action_delete"
            android:textColor="#FF0000" />
    </LinearLayout>

</ScrollView>