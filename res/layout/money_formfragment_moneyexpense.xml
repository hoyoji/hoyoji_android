<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res/com.hoyoji.hoyoji"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MoneyExpenseFormFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.hoyoji.android.hyjframework.view.HyjImageField
            android:id="@+id/moneyExpenseFormFragment_imageField_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@android:color/darker_gray" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/moneyExpenseFormFragment_imageView_camera"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_camera" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:paddingLeft="66dp" >

                <com.hoyoji.android.hyjframework.view.HyjDateTimeField
                    android:id="@+id/moneyExpenseFormFragment_textField_date"
                    hyj:style="no_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_date"
                    hyj:labelText="@string/moneyExpenseFormFragment_textView_date" />

                <View
                    android:id="@id/field_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@android:color/darker_gray" />

                <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyExpenseFormFragment_textField_amount"
                    hyj:style="no_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBold="true"
                    hyj:editTextBorder="none"
                    hyj:editTextColor="#FF0000"
                    hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_amount"
                    hyj:labelText="@string/moneyExpenseFormFragment_textView_amount" >

                    <requestFocus />
                </com.hoyoji.android.hyjframework.view.HyjNumericField>
            </LinearLayout>
        </FrameLayout>


        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.hoyoji.android.hyjframework.view.HyjSelectorField
                android:id="@+id/moneyExpenseFormFragment_selectorField_moneyAccount"
                hyj:style="top_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                hyj:editTextBorder="none"
                hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_moneyAccount"
                hyj:labelText="@string/moneyExpenseFormFragment_textView_moneyAccount" />

            <View
                android:id="@id/field_separator"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <com.hoyoji.android.hyjframework.view.HyjNumericField
                android:id="@+id/moneyExpenseFormFragment_textField_exchangeRate"
                hyj:style="top_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                hyj:editTextBorder="none"
                hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_exchangeRate"
                hyj:labelText="@string/moneyExpenseFormFragment_textView_exchangeRate" />
        </LinearLayout>
        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.hoyoji.android.hyjframework.view.HyjTextField
                android:id="@+id/moneyExpenseFormFragment_textField_moneyExpenseCategory"
                hyj:style="top_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                hyj:editTextBorder="none"
                hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_moneyExpenseCategory"
                hyj:labelText="@string/moneyExpenseFormFragment_textView_moneyExpenseCategory" />

            <View
                android:id="@id/field_separator"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <com.hoyoji.android.hyjframework.view.HyjSelectorField
                android:id="@+id/moneyExpenseFormFragment_selectorField_friend"
                hyj:style="top_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                hyj:editTextBorder="none"
                hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_friend"
                hyj:labelText="@string/moneyExpenseFormFragment_textView_friend" />
        </LinearLayout>
        
        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@android:color/darker_gray" />

        <com.hoyoji.android.hyjframework.view.HyjSelectorField
            android:id="@+id/moneyExpenseFormFragment_selectorField_project"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            hyj:editTextBorder="none"
            hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_project"
            hyj:labelText="@string/moneyExpenseFormFragment_textView_project" />


        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@android:color/darker_gray" />

        <com.hoyoji.android.hyjframework.view.HyjRemarkField
            android:id="@+id/moneyExpenseFormFragment_textField_remark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            hyj:editTextBorder="none"
            hyj:style="no_label"
            hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_remark"
            hyj:labelText="@string/moneyExpenseFormFragment_textView_remark" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@id/button_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_action_save" />
    </LinearLayout>

</ScrollView>