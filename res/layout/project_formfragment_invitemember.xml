<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res/com.hoyoji.hoyoji_android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InviteMemberFormFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
       <com.hoyoji.android.hyjframework.view.HyjTextField
          android:id="@+id/inviteMemberMessageFormFragment_editText_title"
          hyj:style="no_label"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
		  android:layout_marginBottom="10dip"
          hyj:labelText="@string/inviteMemberMessageFormFragment_textView_title"
          hyj:hintText="@string/inviteMemberMessageFormFragment_editText_hint_title" />
   
    
      <com.hoyoji.android.hyjframework.view.HyjRemarkField
          android:id="@+id/inviteMemberMessageFormFragment_editText_detail"
          hyj:style="no_label"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          hyj:hintText="@string/inviteMemberMessageFormFragment_editText_hint_detail"
          hyj:labelText="@string/inviteMemberMessageFormFragment_textView_detail" />
        
        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:visibility="gone"
            android:background="@drawable/line_divider" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inviteMemberFormFragment_textView_shareAuthorization_title" />
            <CheckBox
                android:id="@+id/inviteMemberFormFragment_checkBox_shareAuthorization_expense_self"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inviteMemberFormFragment_textView_shareAuthorization_title_self" />

            <CheckBox
                android:id="@+id/inviteMemberFormFragment_checkBox_shareAuthorization_expense_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inviteMemberFormFragment_textView_shareAuthorization_title_add" />

            <CheckBox
                android:id="@+id/inviteMemberFormFragment_checkBox_shareAuthorization_expense_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inviteMemberFormFragment_textView_shareAuthorization_title_edit" />

            <CheckBox
                android:id="@+id/inviteMemberFormFragment_checkBox_shareAuthorization_expense_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inviteMemberFormFragment_textView_shareAuthorization_title_delete" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />

        <Button
            android:id="@+id/button_send_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_action_send_invite" />
            
    </LinearLayout>

</ScrollView>